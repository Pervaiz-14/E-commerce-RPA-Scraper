# Copy this file to .env and fill the values

# Path to Google service account JSON file (use absolute or project-relative path)
GOOGLE_SERVICE_ACCOUNT_JSON='path/to/google-service-account.json'

# Name of the Google Sheet to create or update
GOOGLE_SHEET_NAME='Your Ecommerce Product Data'

# Default target currency for normalization (ISO code)
TARGET_CURRENCY=USD

# Whether Selenium should run headless (true/false)
HEADLESS=true

# Optional: maximum items to scrape by default (integer)
DEFAULT_MAX_ITEMS=50

# Optional: Exchange API base URL (default uses exchangerate.host)
EXCHANGE_API_BASE=https://api.exchangerate.host
